@model IEnumerable<SampleMVCSolution.Models.Exchange>

@{
    ViewBag.Title = "Index";
}

<h2>Index (for debug only)</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrencyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { date = item.Date.ToString("yyyy-MM-dd"), targetCurrencyCode = item.CurrencyCode }) |
                @Html.ActionLink("Delete", "Delete",   new { date = item.Date.ToString("yyyy-MM-dd"), targetCurrencyCode = item.CurrencyCode })
            </td>
        </tr>
    }

</table>
